{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Run C++",
      "type": "shell",
      "command": "",
      "args": [
        "g++",
        "-std=c++17",
        "${relativeFile}",
        "-o",
        "test.out",
        "&&",
        "./test.out",
        "<",
        "input.txt",
        ">",
        "output.txt",
        "&&",
        "rm",
        "test.out"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}
